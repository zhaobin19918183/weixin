<view style='width:100%;height:480px;box-shadow:0px 0px 3px 3px gray;'>
  <text style='position: absolute;margin-left:10%;width:80%;text-align: center;'>我的工作室</text>
  <view class="table" style='position: absolute'>
    <view class="tr bg-w">
      <view class="th">我的工作室</view>
      <view class="th">正生集团</view>
    </view>
    <block wx:for="{{listData}}" wx:key="{{code}}">
      <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
        <view class="td">{{item.code}}</view>
        <view class="td">{{item.text}}</view>

      </view>
      <view class="tr" wx:else>
        <view class="td">{{item.code}}</view>
        <view class="td">{{item.text}}</view>

      </view>
    </block>

  </view>
  <text style='position: absolute;margin-left:10%;width:80%;text-align: center;margin-top:60%;'>打卡情况</text>
  <scroll-view scroll-y="true" class='tableview' style='height:220px;position: absolute;margin-top:70%'>
    <view wx:for="{{arrayData}}" wx:key="{{itemName.message}}" wx:for-index="idx" wx:for-item="itemName" class='layout_horizontal2' style='margin-top:5%'>
      <image src='{{arrayData[idx]}}' style='margin-left:15%;height:200px;width:70%;'> </image>
      <!-- <image src='{{arrayData[idx+1]}}' style='height:100px;width:40%;margin-left:10%;'></image> -->
    </view>
  </scroll-view>
  <image src='../imgs/background2.png' mode='widthFix' style='position: relative；display: block;width:100%;height:600px'></image>
</view>
