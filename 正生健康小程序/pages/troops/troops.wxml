<view>
<button class='butTopThree' bindtap='show'>活动规则</button>
<button class='butTopThree' bindtap='toClock'>我要打卡</button>
<view class="container">
  <radio-group bindchange="radioCheckedChange">
    <view class="flex_box">
      <view class="flex_item">
        <label class="{{radioCheckVal==0?'active':''}}">战队榜
          <radio hidden="true" value="0"></radio>
        </label>
      </view>
      <view class="flex_item">
        <label class="{{radioCheckVal==1?'active':''}}"> 个人榜
          <radio hidden="true" value="1"></radio>
        </label>
      </view>
      <view class="flex_item">
        <label class="{{radioCheckVal==2?'active':''}}"> 个人榜
          <radio hidden="true" value="2"></radio>
        </label>
      </view>
       <view class="flex_item">
        <label class="{{radioCheckVal==3?'active':''}}"> 个人榜
          <radio hidden="true" value="3"></radio>
        </label>
      </view>
    </view>
  </radio-group>
<scroll-view scroll-y="true" class='tableview' bindtap = "handletap" bindtouchstart = "handletouchtart" bindtouchmove="handletouchmove" bindtouchend="handletouchend" >
    <view wx:for="{{arrayData}}" wx:for-index="idx" wx:for-item="itemName" class='layout_horizontal'>
    <label>{{idx+1}}</label>
    <image  class='image' src='/utils/jp.png'></image>
    <label class='label0'>{{itemName.message}}</label>
    <label class='label1'>1234567890</label>
  </view>
</scroll-view>

</view>


<!-- 弹出层 -->
<view class="modal-box" hidden="{{flag}}" bindtap="hide">

    <view class="modal-body">

      <view class="modal-content">
      
        <button class="knowBtn" bindtap="hide">我知道了</button>
     </view>
    </view>

</view>
</view>
